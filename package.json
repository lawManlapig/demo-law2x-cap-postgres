{
  "name": "demo-law2x-cap-postgres",
  "version": "1.0.0",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "@cap-js/postgres": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29",
    "@cap-js/cds-types": "^0.15.0",
    "@types/node": "^24.0.0",
    "tsx": "^4",
    "typescript": "^5",
    "@cap-js/cds-typer": ">=0.1"
  },
  "scripts": {
    "start": "cds-serve",
    "bdep": "mbt build --mtar a && cf deploy mta_archives/a.mtar --abort-on-error",
    "bdep2": "mbt build --mtar a && cf deploy mta_archives/a.mtar --abort-on-error --delete-services",
    "comp1": "mkdir -p gen/pg/db && cds compile '*' > gen/pg/db/csn.json && ",
    "watch-employees-app": "cds watch --open employeesapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy demo-law2x-cap-postgres --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-employees-s4": "cds watch --open employeess4/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-bp-app": "cds watch --open bpapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-northwind-test": "cds watch --open northwindtest/index.html?sap-ui-xx-viewCache=false --livereload false",
    "w": "cds-ts w --profile hybrid"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth": "mocked",
      "BS4200_Employees_v2": {
        "kind": "odata-v2",
        "model": "srv/external/BS4200_Employees_v2",
        "credentials": {
          "destination": "BS4-200-Destination",
          "path": "/sap/opu/odata/sap/ZSB_EMPLOYEE_UI_O2"
        }
      },
      "ZTST_SB_CUSTOM_V2": {
        "kind": "odata-v2",
        "model": "srv/external/ZTST_SB_CUSTOM_V2",
        "credentials": {
          "destination": "BS4-200-Destination",
          "path": "/sap/opu/odata/sap/ZTST_SB_CUSTOM_V2"
        }
      },
      "NorthwindV4": {
        "kind": "odata",
        "model": "srv/external/NorthwindV4",
        "credentials": {
          "destination": "Test-NorthwindV4",
          "path": "/v4/northwind/northwind.svc"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/employees-app",
    "app/employees-s4",
    "app/bp-app",
    "app/northwind-test"
  ],
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}